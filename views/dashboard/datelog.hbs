    <div class="card-request">
      <p>I SENT REQUEST TO...</p>
      {{#each senderarr}}
      <div class="eachlover">
        <img   src={{receiverId.image_url}}>
        <div class="lover-text">
        <p>{{receiverId.username}}</p>
        <p>Status: {{status}} </p>
        </div>
        {{!-- <button><a href="/profile/{{this.receiverId._id}}">Go to profile</a></button> --}}
      </div>
      {{/each}}
    </div>
  
    <div class="card-request">
      <p>I RECEIVED REQUEST FROM </p>
      {{#each receiverarr}}
      <div>{{senderId.username}} {{status}}</div>
      <div class="btn-box">
        <form method="POST" action ="/dashboard/datelog/confirm/{{_id}}">
          <button type ="submit">Confirm date</button>
        </form>
        <form method="POST" action ="/dashboard/datelog/decline/{{_id}}">
          <button type="submit"> Decline date</button>
        </form>
      </div>
      {{/each}}
    </div>
  
    <div class="card-request">
      <p>list of people that status is confirmed</p>
      {{#if matchesconfirmedRarr}}
        {{#each matchesconfirmedRarr}}
          <div>You {{status}} a date with {{senderId.username}}</div>
          <p>Congratz! this is {{senderId.username}} phone number: {{senderId.phoneNumber}} Send a hello!</p>
      
        {{/each}}
      {{/if}}
       {{#if matchesconfirmedSarr}}
        {{#each matchesconfirmedSarr}}
          <div> {{receiverId.username}}  {{status}} a date with you </div>
          <p>Congratz! this is {{receiverId.username}} phone number: {{receiverId.phoneNumber}} Send a hello!</p>
      
        {{/each}}
      {{/if}}
    </div>

    <div> People that declined my request</div>
    {{#each matchesdeclinedarr}}
      <div>{{receiverId.username}}, {{status}} a date with you</div>
    {{/each}}
  
  </section>



