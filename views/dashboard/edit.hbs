


<div class="register-box">
    <img src="/images/Astrolover-logo.png" alt="logo" class="logo">
    <h5>Edit your profile</h5>
    <h5>{{user.username}}</h5>
    <hr class="hr">
  <form action="/dashboard/edit" method="POST" class="register-form">

      <label >Occupation</label>
      <input value="{{user.occupation}}" type="text" name="occupation" placeholder="occupation">
      <label >Genre</label>
      <input value="{{user.genre}}" type="text" name="genre" placeholder="genre">
      <label >Catch phrase</label>
      <input value="{{user.catchPhrase}}" type="text" name="catchPhrase" placeholder="catch phrase">
      <label >Phone number</label>
      <input value="{{user.phoneNumber}}" type="number" name="phoneNumber" placeholder="phone">
      <label >Upload Image (paste URL)</label>
      <input  value="{{user.image_url}}" type="text" name="image_url" placeholder="Enter image URL">
      <button class="login-btn"type="submit">Save changes</button>
  </form>

</div>
